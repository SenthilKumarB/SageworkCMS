<%= form_tag({:controller => "page", :action => "update", :id => @page.id}) %>
<div id="form_header">
  <h2> New Page </h2>
  <div class="form">
    <span class="label">Title</span>
    <%= text_field :pages, :title, :value => @page.title %>
  </div>
  <div class="form">
    <span class="label">Menu Title</span>
    <%= text_field :pages, :menu_header, :value => @page.menu_header %>
  </div>
  <div class="form">
    <span class="label">Text Description</span>
    <%= text_area :pages, :page_description, :value => @page.page_description, :id=>"html_editor", :rows=>"5", :cols=>"47" %>
  </div>
    <div class="form">
    <span class="label">Text Description</span>
    <%= text_field :pages, :position, :value => @page.position %>
  </div>
</div> 

<div id="form_header">
  <a id="preview" style="cursor:pointer;"> Preview </a>
  <div id="preview_pages"></div>
</div>
<%= submit_tag "Update" %>